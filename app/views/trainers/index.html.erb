<div class="container">
  <h1>Тренеры</h1>

  <%= button_to "Добавить тренера", new_trainer_path, method: :get, class: "button" %>

  <table>
    <thead>
      <tr>
        <th>Имя</th>
        <th>Специализация</th>
        <th>Опыт (лет)</th>
        <th>Телефон</th>
        <th>Email</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @trainers.each do |trainer| %>
        <tr>
          <td><%= trainer.name %></td>
          <td><%= trainer.specialty %></td>
          <td><%= trainer.experience %></td>
          <td><%= trainer.phone %></td>
          <td><%= trainer.email %></td>
          <td>
            <%= button_to "Показать", trainer, method: :get, class: "button small" %>
            <%= button_to "Редактировать", edit_trainer_path(trainer), method: :get, class: "button small" %>
            <%= button_to "Удалить", trainer, method: :delete, data: { confirm: "Вы уверены?" }, class: "button small danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "На главную", root_path, method: :get, class: "button" %>
</div>