<div class="container">
  <h1>Редактирование информации о тренере</h1>

  <%= form_with(model: @trainer) do |form| %>
    <div class="form-group">
      <%= form.label :name, "ФИО" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :specialty, "Специализация" %>
      <%= form.text_field :specialty, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :experience, "Опыт (лет)" %>
      <%= form.number_field :experience, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone, "Телефон" %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, "Email" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Обновить информацию", class: "button" %>
      <%= link_to "Назад", trainers_path, class: "button secondary" %>
      <%= link_to "На главную", root_path, class: "button secondary" %>
    </div>
  <% end %>
</div>