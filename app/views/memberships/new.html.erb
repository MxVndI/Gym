<div class="container">
  <h1>Новый абонемент</h1>

  <%= form_with(model: @membership) do |form| %>
    <div class="form-group">
      <%= form.label :name, "ФИО" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :phone, "Телефон" %>
      <%= form.text_field :phone, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date, "Дата начала" %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :end_date, "Дата окончания" %>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :status, "Статус" %>
      <%= form.select :status, ['active', 'inactive'], {}, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Добавить абонемент", class: "button" %>
      <%= link_to "Назад", memberships_path, class: "button secondary" %>
      <%= link_to "На главную", root_path, class: "button secondary" %>
    </div>
  <% end %>
</div>