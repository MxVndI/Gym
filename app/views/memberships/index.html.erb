<div class="container">
  <h1>Абонементы</h1>

  <%= button_to "Добавить новый абонемент", new_membership_path, method: :get, class: "button" %>

  <table>
    <thead>
      <tr>
        <th>ФИО</th>
        <th>Телефон</th>
        <th>Дата начала</th>
        <th>Дата окончания</th>
        <th>Статус</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @memberships.each do |membership| %>
        <tr>
          <td><%= membership.name %></td>
          <td><%= membership.phone %></td>
          <td><%= membership.start_date %></td>
          <td><%= membership.end_date %></td>
          <td><%= membership.status %></td>
          <td>
            <%= button_to "Показать", membership, method: :get, class: "button small" %>
            <%= button_to "Редактировать", edit_membership_path(membership), method: :get, class: "button small" %>
            <%= button_to "Удалить", membership, method: :delete, data: { confirm: "Вы уверены?" }, class: "button small danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "На главную", root_path, method: :get, class: "button" %>
</div>