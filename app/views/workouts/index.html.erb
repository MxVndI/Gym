<div class="container">
  <h1>Тренировки</h1>

  <%= button_to "Добавить тренировку", new_workout_path, method: :get, class: "button" %>

  <table>
    <thead>
      <tr>
        <th>Дата</th>
        <th>Продолжительность (минуты)</th>
        <th>Тренируемый</th>
        <th>Тренер</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>
      <% @workouts.each do |workout| %>
        <tr>
          <td><%= workout.date %></td>
          <td><%= workout.duration %></td>
          <td><%= workout.membership.name %></td>
          <td><%= workout.trainer.name %></td>
          <td>
            <%= button_to "Показать", workout, method: :get, class: "button small" %>
            <%= button_to "Редактировать", edit_workout_path(workout), method: :get, class: "button small" %>
            <%= button_to "Удалить", workout, method: :delete, data: { confirm: "Вы уверены?" }, class: "button small danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= button_to "На главную", root_path, method: :get, class: "button" %>
</div>