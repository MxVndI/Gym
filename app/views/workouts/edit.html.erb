<div class="container">
  <h1>Редактирование тренировки</h1>

  <%= form_with(model: @workout) do |form| %>
    <div class="form-group">
      <%= form.label :membership_id, "Тренируемый" %>
      <%= form.collection_select :membership_id, Membership.all, :id, :name, { prompt: "Выберите абонемент" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :trainer_id, "Тренер" %>
      <%= form.collection_select :trainer_id, Trainer.all, :id, :name, { prompt: "Выберите тренера" }, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date, "Дата тренировки" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :duration, "Продолжительность (минуты)" %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Обновить тренировку", class: "button" %>
      <%= link_to "Назад", workouts_path, class: "button secondary" %>
      <%= link_to "На главную", root_path, class: "button secondary" %>
    </div>
  <% end %>
</div>